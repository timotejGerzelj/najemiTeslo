
<!DOCTYPE html>
<html lang="{{ lang }}" dir="{{ dir }}">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="{{landing.favicon.url}}" sizes="16x16" />
    <link rel="icon" type="image/png" href="{{landing.favicon.taskbar_shortcut.url}}" sizes="32x32" />
    <link rel="icon" type="image/png" href="{{landing.favicon.desktop_shortcut.url}}" sizes="96x96" />
    <title>{{ landing.seo_title or site.title }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="{{ landing.seo_meta_description or site.meta_description }}">
    <meta name="referrer" content="no-referrer-when-downgrade">
    {# Open graph related #}
    <meta property="og:title" content="{{ landing.seo_title or site.title }}" />
    <meta property="og:type" content="{{ site.type }}" />
    <meta property="og:url" content="{{ url or site.url }}" />
    <meta property="og:image" content="{{ image or site.image }}" />
    <meta property="og:site_name" content="{{ landing.seo_name or site.name }}" />
    <meta property="og:description" content="{{ landing.seo_meta_description or site.meta_description }}" />
    <link rel="stylesheet" href="{% webpack 'main.css' %}"/>
    <link rel="alternate" hreflang="{{hreflang}}" href="{{ href_alternate }}" />
  </head>
  <body class='relative'>
    {% include "components/header.njk" %}
    {{ content | safe }}
    <script src="{% webpack 'main.js' %}"></script>
  </body>
</html>